{% extends 'default/base.html.twig' %}

{% block main %}
    <script type="text/javascript">
      
    </script>
    <main class="container">
    	<h2 class="text-muted">Matriz {{matriz.descripcion|lower}} </h2>
    	<table class="table">
    		<tr>
    			<th>Indicador</th>
                <th>Estado</th>
    			<th>Factores</th>
    		</tr>
              <form method="GET" action="{{url('matriz_actualiza')}}">
            {% for i in indicadores %}
                <tr class="desactivado">
                <td>{{i.descripcion}}</td>
                <td class="text-center">
                     {% if i.estado == 'NO' %}
                          <input id="btn-estado" type="checkbox" name="estado[]"    >
                    {% elseif i.estado == 'SI'%}
                         
                    {% endif %}
                  
                     <div id="valor"></div>
                </td>
              
                <td class="text-center">
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-sm btn-outline-primary" data-toggle="modal" data-target="#modalFactores">
                      Filtros
                    </button>
                    <!-- Modal -->

                    <div class="modal fade" id="modalFactores" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog" id="modalFactoresDialog" role="document">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Parametros</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                          <div class="modal-body">
                            <div class="container">
                                <table class="table table-responsive table-sm">
                                <thead class="table-inverse">
                                     <tr>
                                         <th>Factor</th>
                                        <th>Parametro</th>
                                        <th>Tipo Requisito</th>
                                        <th>Requisito</th>
                                    </tr>
                                </thead>
                                   
                                    
                                     {% for p in parametros %}
                                        <tr>
                                            <td>{{p.parametro}}</td>
                                            <td>{{p.parametro_valor}}</td>
                                            <td>{{p.tipo_requisito}}</td>
                                            <td>{{p.requisito}}</td>
                                        </tr>
                                    {% endfor %}
                                </table>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            <button type="button" class="btn btn-primary">Guardar</button>
                          </div>
                        </div>
                      </div>
                    </div>
                </td>
            {% endfor %}
    			
    		</tr>
    	</table>


          <input type="submit" value="Actualizar" class="btn btn-primary">
</form>
                   
{% endblock %}

{% block scripts %}

    {{parent()}}

    <script src="{{asset('js/proponer.js')}}" type='text/javascript'>



    </script>
    
{% endblock %}